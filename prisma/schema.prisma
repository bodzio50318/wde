datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model Item {
  id     Int     @id @default(autoincrement())
  name   String
  unitId Int
  unit   Unit    @relation(fields: [unitId], references: [id])
  lists  List[]  @relation("ItemLists")
}

model List {
  id    Int     @id @default(autoincrement())
  name  String
  items Item[]  @relation("ItemLists")
}

model Unit {
  id    Int     @id @default(autoincrement())
  name  String
  items Item[]
}